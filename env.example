# Zero Sum X Trading Platform - Environment Variables Template
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_URL=postgresql://trading_user:your_password@localhost:5432/trades_db
DB_USER=trading_user
DB_PASSWORD=your_secure_password
DB_NAME=trades_db

# Redis Configuration
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:5000
PORT=5000

# Trading Symbols
SYMBOLS=BTCUSDT,ETHUSDT,SOLUSDT,BNBUSDT,XRPUSDT,ADAUSDT,DOGEUSDT,AVAXUSDT,LINKUSDT

# WebSocket Configuration
WS_PORT=8080

# Monitoring
GRAFANA_PASSWORD=admin123

# Production URLs (for production deployment)
# NEXT_PUBLIC_API_URL=https://your-domain.com
